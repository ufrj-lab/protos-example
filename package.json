{
    "name": "@ufrj/proto-example",
    "version": "0.0.0",
    "description": "Exemplo de definições Protobuf.js empacotadas",
    "main": "lib/index.js",
    "scripts": {
        "build": "rm -fr lib && mkdir lib && pbjs -o lib/index.js -w commonjs -t json-module src/index.proto && pbjs -t static-module -w commonjs src/index.proto | pbts -o lib/index.d.ts -",
        "add": "all-contributors add",
        "commit": "git-cz"
    },
    "keywords": [
        "gRPC",
        "TypeScript",
        "JavaScript",
        "API"
    ],
    "author": {
        "name": "Vinícius Carvalho",
        "email": "vinicius.fc93@gmail.com"
    },
    "license": "AGPL-3.0",
    "dependencies": {
        "protobufjs": "^6.8.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "all-contributors-cli": "^6.2.0",
        "commitizen": "^3.0.7",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^1.3.1",
        "lint-staged": "^11.0.1",
        "prettier": "^1.16.4",
        "semantic-release": "^15.13.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        ".all-contributorsrc": [
            "all-contributors generate",
            "git add"
        ],
        "{.,}*.{yml,json,md}": [
            "prettier --write '**/*.{yml,json,md}'",
            "git add"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "bracketSpacing": true,
        "printWidth": 80,
        "trailingComma": "all",
        "semi": false,
        "arrowParens": "avoid",
        "proseWrap": "always"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
